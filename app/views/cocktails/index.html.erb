
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.vinepair.com/wp-content/uploads/2016/11/cocktailsubs-internal-header.jpg);">
  <div class="container">
    <h1>Cocktails</h1>
    <p> <%= link_to "Add a cocktail!", new_cocktail_path %> </p>
  </div>
</div>

<ul>
  <% @cocktails.each do |c| %>
  <div class='card-category'>
    <li class="main-list">
      <p><%= cl_image_tag c.photo, height: 300, width: 400, crop: :fill %> </p>
      <p><%= c.name %> <%= link_to 'Details', cocktail_path(c) %> </p> </li>
  <% end %>
  </div>
</ul>
