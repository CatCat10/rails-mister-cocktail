<h1><%= @cocktail.name %></h1>

<h2>Recipe:</h2>

<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description %>  <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>

<p><%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail.id) %></p>

<p><%= link_to "Back to all cocktails", cocktails_path %></p>
